<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewContenido"
        android:layout_width="match_parent"

        android:layout_height="match_parent" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgContenido"
                android:layout_width="106dp"
                android:layout_height="97dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="348dp"
                android:layout_height="23dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="10dp" />


            <TextView
                android:id="@+id/txtAlbum"
                android:layout_width="167dp"
                android:layout_height="51dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:maxLines="4"
                android:lines="4"
                app:layout_constraintLeft_toRightOf="@+id/imgContenido"
                app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
                tools:layout_editor_absoluteY="47dp"
                tools:layout_editor_absoluteX="144dp" />

            <TextView
                android:id="@+id/txtFechaLanzamiento"
                android:layout_width="218dp"
                android:layout_height="21dp"
                android:layout_marginTop="17dp"
                android:text="TextView"
                app:layout_constraintTop_toBottomOf="@+id/txtAlbum"
                app:layout_constraintLeft_toRightOf="@+id/imgContenido"
                android:layout_marginLeft="22dp" />

            <TextView
                android:id="@+id/txtCantCanciones"
                android:layout_width="109dp"
                android:layout_height="21dp"
                android:text="TextView"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/txtFechaLanzamiento"
                app:layout_constraintLeft_toRightOf="@+id/imgContenido"
                android:layout_marginLeft="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtCantBusquedas"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txtCantCanciones"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtFechaLanzamiento"
                app:layout_constraintHorizontal_bias="0.641"
                app:layout_constraintVertical_bias="1.0" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
